meta {
  name: Stripe confirms course purchase
  type: http
  seq: 21
}

post {
  url: http://{{ilim-url}}/admin/confirm-course-purchase
  body: json
  auth: bearer
}

auth:bearer {
  token: {{adminToken}}
}

body:json {
  {
    "userId": "{{studentId}}",
    "courseId": "{{courseId}}",
    "paymentId": "{{randomId}}",
    "paymentDate": "2024-11-12",
    "status": "succeeded"
  }
}

assert {
  res.status: eq 200
}

script:pre-request {
  const { v4: uuidv4 } = require('uuid');
  bru.setEnvVar("randomId", uuidv4());
}
